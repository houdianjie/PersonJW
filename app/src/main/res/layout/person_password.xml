<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg_color">
    <EditText
        android:hint="请输入原密码:"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/person_password_ev1"/>
    <EditText
        android:hint="请输入新密码:"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/person_password_ev2"/>
    <EditText
        android:hint="请确认新密码:"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/person_password_ev3"/>
    <Button
        android:background="@drawable/login_btn_bg"
        android:onClick="person_password_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/person_password_btn1"
        android:layout_gravity="center"
        android:text="修改密码"/>
    <TextView
        android:textColor="@color/classroom_text_color"
        android:id="@+id/person_password_tv1"
        android:padding="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/password_tip"/>

</LinearLayout>