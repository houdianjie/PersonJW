<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
<LinearLayout
    android:layout_margin="5dp"
    android:background="@drawable/exam_items_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:padding="3dp"
        android:gravity="center"
        android:textSize="20sp"
        android:text="课程名称"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        />
    <TextView
        android:id="@+id/stu_proc_class"
        android:padding="3dp"
        android:textColor="@color/text_colors"
        android:gravity="center"
        android:textSize="20sp"
        android:text="C02通识教育必修课程（思政类）"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            style="@style/stu_proc_ls_tv"
            android:text="属性"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            />
        <TextView
            style="@style/stu_proc_ls_tv"
            android:text="学分要求" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            />
        <TextView
            style="@style/stu_proc_ls_tv"
            android:text="已获学分"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/stu_proc_attr"
            android:textColor="#000"
            style="@style/stu_proc_ls_tv"
            android:text="必修"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            />
        <TextView
            android:id="@+id/stu_proc_req_credit"
            android:textColor="#000"
            style="@style/stu_proc_ls_tv"
            android:text="20" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            />
        <TextView
            android:id="@+id/stu_proc_get_credit"
            android:textColor="#000"
            style="@style/stu_proc_ls_tv"
            android:text="15"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            style="@style/stu_proc_ls_tv"
            android:text="门数要求"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            />
        <TextView
            style="@style/stu_proc_ls_tv"
            android:text="已通过门数" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            />
        <TextView
            style="@style/stu_proc_ls_tv"
            android:text="是否合格"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/stu_proc_req_num"
            android:textColor="#000"
            style="@style/stu_proc_ls_tv"
            android:text="5"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            />
        <TextView
            android:id="@+id/stu_proc_pass_num"
            android:textColor="#000"
            style="@style/stu_proc_ls_tv"
            android:text="3" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000"
            />
        <TextView
            android:id="@+id/stu_proc_ispassed"
            android:textColor="#000"
            style="@style/stu_proc_ls_tv"
            android:text="否"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>