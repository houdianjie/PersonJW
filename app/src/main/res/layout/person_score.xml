<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/all_bg_color">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        >
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_weight="1.1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请选择:"
            android:layout_gravity="center"/>

        <Spinner
            android:background="@drawable/login_btn_bg"
            android:layout_weight="0.9"
            android:id="@+id/person_score_spn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/course_year_sele"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.19"
            android:text="学年"
            android:layout_gravity="center"/>
        <Spinner
            android:background="@drawable/login_btn_bg"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/person_score_spn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/course_term_sele"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.19"
            android:text="学期"/>
        <Button
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/login_btn_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/person_score_btn1"
            android:layout_gravity="center"
            android:text="获取成绩"
            android:onClick="person_score_click1"/>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/score_list_title_bg"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
       android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/person_score_01tv"
            android:layout_marginLeft="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="课程名"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="15sp"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/person_score_02tv"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.05"
            android:text="平时"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/person_score_03tv"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:text="期末"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/person_score_04tv"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:text="总评"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/person_score_05tv"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:text="学分"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/person_score_06tv"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.07"
            android:text="备注"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#000000"/>
        <TextView
            android:id="@+id/person_score_07tv"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.07"
            android:text="是否缓考"/>

    </LinearLayout>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/person_score_lv1"
            android:divider="@drawable/classroom_list_divide"
            android:dividerHeight="1dp"
            ></ListView>

</LinearLayout>