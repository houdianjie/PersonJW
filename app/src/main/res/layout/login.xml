<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@drawable/all_bg_color"
    >
    <TextView
        android:textColor="@color/classroom_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="掌上教务"
        android:layout_gravity="center"
        android:textSize="30sp"/>
    <EditText
        android:text=""
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:hint="请输入学号："/>
    <EditText
        android:text=""
        android:inputType="textPassword"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码："
        android:id="@+id/et2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/hint"
            android:id="@+id/img1"
            android:layout_weight="1"
            />
        <Button
            android:background="@drawable/login_btn_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn2"
            android:text="获取验证码"
            android:onClick="btn2_click"
            android:layout_weight="2"/>

    </LinearLayout>
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:src="@drawable/hint"
            android:id="@+id/img1_school_in"
            android:layout_weight="1"
            />
        <Button
            android:background="@drawable/login_btn_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn2_school_in"
            android:text="获取校内验证码"
            android:onClick="btn_school_in_click"
            android:layout_weight="2"/>

    </LinearLayout>-->
    <EditText
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et3"
        android:hint="请输入验证码："/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_marginLeft="3dp"
            android:onClick="login_cb"
         android:id="@+id/cb_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember_password"
        android:layout_alignParentRight="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">
    <Button
        android:background="@drawable/login_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:text="登 录"
        android:onClick="btn1_click"
        android:layout_weight="1"
        android:layout_marginRight="2dp"/>
        <!--校内登录按钮-->
       <!-- <Button
            android:background="@drawable/login_btn_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_school_in"
            android:text="校内登录"
            android:onClick="btn_school_in_login_click"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"/>-->
    <Button
        android:background="@drawable/login_btn_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:text="浏览器"
        android:onClick="btn3_click"
        android:layout_weight="1"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

        <Button
            android:background="@drawable/login_btn_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn4"
            android:text="关 于"
            android:onClick="btn4_click"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:orientation="vertical"
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sub_browser_lay">
            <WebView
                android:visibility="invisible"
                android:id="@+id/sub_brow_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </WebView>
            <ImageButton
                android:padding="1dp"
                android:visibility="invisible"
                android:id="@+id/sub_brow_img_click"
                android:background="#0000"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:src="@drawable/sub_browser_bg"/>
            <TextView
                android:visibility="invisible"
                android:id="@+id/sub_brow_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </LinearLayout>



</LinearLayout>
